{
  "type": "Group",
  "label": "Citations",
  "elements": [
    {
      "type": "Control",
      "scope": "#/properties/citation",
      "options": {
        "elementLabelProp": "title",
        "showSortButtons": false,
        "detail": {
          "type": "VerticalLayout",
          "elements": [
            {
              "type": "Control",
              "label": "Title",
              "scope": "#/properties/title"
            },
            {
              "type": "Control",
              "label": "Published",
              "scope": "#/properties/published",
              "options": { "toggle": true }
            },
            {
              "type": "Control",
              "label": "Preprint",
              "scope": "#/properties/preprint",
              "options": { "toggle": true }
            },
            {
              "type": "Control",
              "label": "Journal Citation",
              "scope": "#/properties/j_or_nj_citation",
              "options": { "toggle": true }
            },
            {
              "type": "Control",
              "label": "Authors",
              "scope": "#/properties/authors",
              "options": {
                "elementLabelProp": "name",
                "detail": {
                  "type": "VerticalLayout",
                  "elements": [
                    {
                      "type": "Control",
                      "label": "Name",
                      "scope": "#/properties/name"
                    },
                    {
                      "type": "Control",
                      "label": "ORCID",
                      "scope": "#/properties/author_orcid"
                    }
                  ]
                }
              }
            },
            {
              "type": "Control",
              "label": "Editors",
              "scope": "#/properties/editors",
              "options": {
                "elementLabelProp": "name",
                "detail": {
                  "type": "VerticalLayout",
                  "elements": [
                    {
                      "type": "Control",
                      "label": "Name",
                      "scope": "#/properties/name"
                    },
                    {
                      "type": "Control",
                      "label": "ORCID",
                      "scope": "#/properties/author_orcid"
                    }
                  ]
                }
              }
            },
            {
              "type": "Control",
              "label": "Year",
              "scope": "#/properties/year"
            },
            {
              "type": "Control",
              "label": "Volume",
              "scope": "#/properties/volume"
            },
            {
              "type": "Control",
              "label": "Country",
              "scope": "#/properties/country"
            },
            {
              "type": "Control",
              "label": "First Page",
              "scope": "#/properties/first_page"
            },
            {
              "type": "Control",
              "label": "Last Page",
              "scope": "#/properties/last_page"
            },
            {
              "type": "Control",
              "label": "DOI",
              "scope": "#/properties/doi"
            },
            {
              "type": "Control",
              "label": "PubMed ID",
              "scope": "#/properties/pubmedid"
            },
            {
              "type": "Control",
              "label": "Details",
              "scope": "#/properties/details"
            },
            {
              "type": "Control",
              "label": "Book Chapter Title",
              "scope": "#/properties/book_chapter_title"
            },
            {
              "type": "Control",
              "label": "Publisher",
              "scope": "#/properties/publisher"
            },
            {
              "type": "Control",
              "label": "Publication Location",
              "scope": "#/properties/publication_location"
            },
            {
              "type": "Control",
              "label": "Journal",
              "scope": "#/properties/journal"
            },
            {
              "type": "Control",
              "label": "Journal Abbreviation",
              "scope": "#/properties/journal_abbreviation"
            },
            {
              "type": "Control",
              "label": "Issue",
              "scope": "#/properties/issue"
            }
          ]
        }
      }
    }
  ]
}
